generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Student {
  id                Int      @id @default(autoincrement())
  fullName          String
  birthDate         DateTime
  university        String
  currentSemester   Int
  career            String
  description       String   @db.Text
  profileImageUrl   String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
